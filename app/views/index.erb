<h1>My Robots</h1>

<% @robots.each do |robot| %>
  <h3><a href="/robots/<%=robot.id %>"><%= robot.name %></a></h3>
  <p><a href="/robots/<%=robot.id %>"><%= robot.city %></a></p>
  <p><a href="/robots/<%=robot.id %>"><%= robot.state %></a></p>
  <p><a href="/robots/<%=robot.id %>"><%= robot.department %></a></p>
  <a href="/robots/<%= robot.id  %>/edit">Edit</a>
  <form action="/robots/<%= robot.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>

  <% end %>
